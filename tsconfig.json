{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"esModuleInterop": true,
		"importHelpers": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2020",
			"scripthost"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"target": "ES6"
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"src/**/*.ts",
		"typings/**/*.ts"
	]
}
